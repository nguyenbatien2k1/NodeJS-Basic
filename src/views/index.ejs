<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NodeJS Basic</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/upload">Upload File</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>
      
    <div>
        <div class="w3-container">
            <h2>List Users:</h2>
          
            <table class="w3-table-all w3-hoverable">
              <thead>
                <tr class="w3-light-grey">
                  <th>ID</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th style="display: flex; justify-content: center; align-items: center;">Actions</th>
                </tr>
              </thead>

              <tbody>
                <% for(let i=0; i < dataUser.length; i++) { %>
                    <tr>
                      <td><%= dataUser[i].id %></td>
                      <td><%= dataUser[i].firstName %></td>
                      <td><%= dataUser[i].lastName %></td>
                      <td style="display: flex; justify-content: space-evenly; align-items: center;">
                        <a href="/details/user/<%= dataUser[i].id %>">Details</a>

                        <form action="/edit-user/<%= dataUser[i].id %>" method="GET">
                          <button type="submit">Edit</button>
                        </form>
                        
                        <form action="/delete-user" method="POST">
                          <input type="text" hidden value="<%= dataUser[i].id %>" name="userId" />
                          <button type="submit">Delete</button>
                        </form>
                      </td>
                    </tr>
                 <% } %>
              </tbody>
              
            </table>
        </div>

        <div class="create-user-container">
          <form action="/create-new-user" method="POST">
            <h2>Create User:</h2>
            <div>
              <div>
                <div>
                  <label for="firstName">First Name: </label>
                </div>
                <input type="text" placeholder="Enter..." id="firstName" name="firstName" />
              </div>

              <div>
                <div>
                  <label for="lastName">Last Name: </label>
                </div>
                <input type="text" placeholder="Enter..." id="lastName" name="lastName" />
              </div>

              <div>
                <div>
                  <label for="email">Email: </label>
                </div>
                <input type="email" placeholder="Enter..." id="email" name="email" />
              </div>

              <div>
                <div>
                  <label for="address">Address: </label>
                </div>
                <input type="text" placeholder="Enter..." id="address" name="address" />
              </div>

              <div style="margin-top: 12px;">
                <button class="btn-submit">Submit</button>
              </div>
          </form>
          </div>
        </div>
    </div>



</body>
</html>